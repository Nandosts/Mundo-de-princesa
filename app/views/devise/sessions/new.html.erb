<!-- app/views/devise/sessions/new.html.erb -->
<%= stylesheet_link_tag 'login', media: 'all' %>

<session class="login-session">
  <h2 class="login-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login-form"}) do |f| %>
    <div class="field">
      <%= f.label :email, class: "login-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-input" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "login-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "login-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, { class: "login-checkbox" }, true %>
        <%= f.label "Manter conectado", class: "login-checkbox-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "login-button" %>
    </div>
  <% end %>
</session>