<!-- app/views/produtos/form.html.erb -->
<%= stylesheet_link_tag 'produtos_form', media: 'all' %>


<h1>'Editar Produto'</h1>

<%= form_with model: @produto, url: produto_path(@produto), local: true do |form| %>
  <%= form.label :nome, 'Nome' %>
  <%= form.text_field :nome %>

  <%= form.label :descricao, 'Descrição' %>
  <%= form.text_area :descricao %>

  <%= form.label :preco, 'Preço' %>
  <%= form.number_field :preco, step: 0.01, value: number_with_precision(@produto.preco, precision: 2) %>

  <%= form.label :imagem, 'Imagem' %>
  <%= form.file_field :imagem %>

  <br/>
  <br/>
  <%= form.submit 'Atualizar Produto' %>
<% end %>

<%= link_to 'Voltar', produtos_path %>
